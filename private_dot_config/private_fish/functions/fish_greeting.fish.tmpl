function fish_greeting
	fastfetch \
		-s title:separator:os:host:uptime:packages:shell:display:terminal:terminalfont:cpu:gpu:disk:memory:swap:battery \
		{{- if eq .profile "launchmetrics" }}
		--logo {{ .chezmoi.workingTree }}/images/lm.png \
		--logo-width 38 \
		--logo-height 18 \
		--logo-type {{ if ne .chezmoi.os "darwin" }} iterm {{ else }} kitty {{ end }}
		{{- end }}

end
