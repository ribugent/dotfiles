source=(
	"docker-daemon.json"
	"pacman-initramfs-permissions.hook"
	"sddm.conf"
	"sysctl-hardening.conf"
	"sysctl-swapiness.conf"
	"systemd-resolved-disable-default-dns.conf"
	"systemd-resolved-dnssec.conf"
	"systemd-resolved-docker.conf"
	"xorg-monitor.conf"
)

