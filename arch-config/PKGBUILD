package() {
	install -Dm0644 docker-daemon.json "$pkgdir/etc/docker/daemon.json"
	install -Dm0644 pacman-initramfs-permissions.hook "$pkgdir/usr/share/libalpm/hooks/91-initramfs-permissions.hook"
	install -Dm0644 sddm.conf "$pkgdir/etc/sddm.conf.d/hidpi.conf"
	install -Dm0644 sysctl-hardening.conf "$pkgdir/etc/sysctl.d/51-hardening.conf"
	install -Dm0644 sysctl-swapiness.conf "$pkgdir/etc/sysctl.d/99-swapiness.conf"
	install -Dm0644 systemd-resolved-disable-default-dns.conf "$pkgdir/etc/systemd/resolved.conf.d/disable-default-dns.conf"
	install -Dm0644 systemd-resolved-dnssec.conf "$pkgdir/etc/systemd/resolved.conf.d/dnssec.conf"
	install -Dm0644 systemd-resolved-docker.conf "$pkgdir/etc/systemd/resolved.conf.d/docker.conf"
	install -Dm0644 xorg-monitor.conf "$pkgdir/etc/X11/xorg.conf.d/monitor.conf"
}
