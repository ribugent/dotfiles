[user]
        name = {{ .git.name }}
{{ if eq .profile "personal" }}
        email = {{ .git.personal.email }}
        signingkey = {{ .git.personal.signkey }}
{{ else if eq .profile "launchmetrics" }}
        email = {{ .git.work.email }}
        signingkey = {{ .git.work.signkey }}
{{ end }}

[commit]
        verbose = true
        gpgsign = true

[init]
	defaultBranch = main

[push]
        default = simple
        autoSetupRemote = true

[pull]
        rebase = merges

[diff]
        tool = vscode
        ff = false

[difftool "vscode"]
    cmd = code --new-window --wait --diff $LOCAL $REMOTE

[mergetool]
        prompt = false

[sequence]
       editor = interactive-rebase-tool

[url "https://github.com"]
	insteadOf = git://github.com

{{ if eq .profile "launchmetrics" }}
[includeIf "hasconfig:remote.*.url:{{ .git.work.remotePrefix }}/**"]
        path = ~/.gitconfig-lm-hooks.inc

[includeIf "hasconfig:remote.*.url:{{ .git.personal.remotePrefix }}/**"]
	path = ~/.gitconfig-ribugent.inc

[includeIf "hasconfig:remote.*.url:ssh://aur@aur.archlinux.org/**"]
        path = ~/.gitconfig-ribugent.inc
{{ end }}

[color "status"]
	added = green bold
#	changed = red bold strike
	untracked = cyan
	branch = yellow black bold ul

[core]
        pager = delta
        ignorecase = false

# Git-delta config
[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true
    features = themes

[delta "themes"]
    syntax-theme = OneHalfDark

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
